FROM gcr.io/kauri-197812/kauri-contract-abis:latest-uat

# RUN apt-get update && apt upgrade && \
#   apt install -y bash git openssh-client
RUN mkdir -p /usr/src/app
WORKDIR /usr/src/app
COPY package.json /usr/src/app/
COPY yarn.lock /usr/src/app/
RUN npm install -g yarn
RUN yarn
COPY . /usr/src/app
ENV GETH_BLOCKCHAIN=rinkeby.infura.io
ENV MONOLITH_EXTERNAL_API=api.rinkeby.kauri.io
ENV MONOLITH_API=monolith.uat:8080
#next specific build
RUN yarn build
EXPOSE 3000
CMD "yarn" "start"
